{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
{% if error %}
    <div class="alert alert-danger" role="alert">
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
{% endif %}

    <div class = "container mt-4">
        <h1 class = "text-center">Connexion</h1>
        <div>
            <form action="{{path('app_connexion')}}" method="POST">    
                <div class="form-group">
                    <label for="username" class="form-label mt-4">Adresse email</label>
                    <input type="email" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Adresse email" name="_username" value="{{ last_username }}">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1" class="form-label mt-4">Mot de passe</label>
                    <input type="password" class="form-control" id="password" placeholder="Mot de passe" name="_password">
                </div>

                <input type="hidden" name="_target_path" value="/">

                <div class="text-center">
                    <button type="submit" class="btn btn-primary mt-4">Connexion</button>
                </div>
            </form>

        </div>
    </div>
{% endblock %}